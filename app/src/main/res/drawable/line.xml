<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- This is the line -->
    <!-- left 和right是左右边距 -->
    <item
        android:left="20dp"
        android:right="20dp">
        <shape>
            <solid android:color="#fff" />
        </shape>
    </item>
    <!--bottom是横线高度 -->
    <item android:bottom="0.1dp">
        <shape>
            <solid android:color="#c9c9c9" />
        </shape>
    </item>
</layer-list>