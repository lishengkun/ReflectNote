    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="?attr/actionBarSize">
        <EditText
            android:id="@+id/input_title_note_book"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入笔记标题"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:id="@+id/add_to_note_book"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/label_note_book"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@id/input_title_note_book"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <Button
            android:id="@+id/show_label_note_book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="选择标签"
            android:textColor="#333"
            android:textStyle="normal"
            android:background="@color/colorTransparent"
            android:layout_marginTop="8dp"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toBottomOf="@id/input_title_note_book"
            app:layout_constraintLeft_toRightOf="@id/add_to_note_book"/>
        <EditText
            android:id="@+id/add_label_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:hint="输入标签名"
            app:layout_constraintTop_toBottomOf="@id/input_title_note_book"
            app:layout_constraintRight_toLeftOf="@id/add_label_note_book"/>
        <Button
            android:id="@+id/add_label_note_book"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/add_to_do_item"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/input_title_note_book"/>
        <Button
            android:id="@+id/insure_add_label_note_book"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/new_label_name_insure"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/input_title_note_book"/>
        <View
            android:id="@+id/underline_note_book"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#c0c0c0"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/add_to_note_book"/>
        <EditText
            android:id="@+id/input_content_note_book"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:singleLine="false"
            android:textSize="16sp"
            android:hint="@string/input_content_note_book"
            android:inputType="textMultiLine"
            android:scrollHorizontally="false"
            android:background="@color/colorTransparent"
            app:layout_constraintTop_toBottomOf="@id/underline_note_book"
            app:layout_constraintLeft_toLeftOf="parent"/>
    </android.support.constraint.ConstraintLayout>
