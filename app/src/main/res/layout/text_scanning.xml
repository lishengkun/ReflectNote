<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/focus_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <SurfaceView
            android:id="@+id/camera_preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/backBtn_text_scanning"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="left"
            android:layout_marginStart="40dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/back" />

        <Button
            android:id="@+id/light_camera"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="right"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="30dp"/>

        <ImageView
            android:id="@+id/album_camera"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_gravity="bottom|left"
            android:layout_marginStart="40dp"
            android:layout_marginBottom="36dp"
            android:scaleType="centerCrop"
            android:background="@drawable/border_album"/>

        <Button
            android:id="@+id/take_picture_btn"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="30dp"
            android:background="@drawable/take_picture" />
    </FrameLayout>

</android.support.constraint.ConstraintLayout>
